{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment Approval API",
    "version": "1.0.0",
    "description": "Two-step payment approval API"
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login (returns JWT)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthResponse" } } } },
          "401": { "description": "Invalid credentials", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/payments": {
      "post": {
        "summary": "Create payment request",
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaymentCreate" } } } },
        "responses": { "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Payment" } } } } }
      },
      "get": {
        "summary": "List payments",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Payment" } } } } } }
      }
    },
    "/payments/{id}/admin-approve": {
      "post": {
        "summary": "Admin approve/reject",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Payment ID" }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AdminAction" } } } },
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Payment" } } } }, "400": { "description": "Invalid action", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }, "403": { "description": "Forbidden" }, "404": { "description": "Not Found" } }
      }
    },
    "/payments/{id}/super-approve": {
      "post": {
        "summary": "Super admin confirm/reject",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "Payment ID" }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuperAction" } } } },
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Payment" } } } }, "400": { "description": "Invalid action", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }, "403": { "description": "Forbidden" }, "404": { "description": "Not Found" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "AuthRequest": {
        "type": "object",
        "properties": { "username": { "type": "string" }, "password": { "type": "string" } },
        "required": ["username", "password"]
      },
      "AuthResponse": { "type": "object", "properties": { "token": { "type": "string" } } },
      "PaymentCreate": { "type": "object", "properties": { "amount": { "type": "number", "format": "float" }, "user_id": { "type": "string" } }, "required": ["amount","user_id"] },
      "Payment": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "amount": { "type": "number", "format": "float" },
          "user_id": { "type": "string" },
          "status": { "type": "string" },
          "requested_by": { "type": "string" },
          "admin_by": { "type": "string" },
          "super_admin_by": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "admin_at": { "type": "string", "format": "date-time" },
          "super_admin_at": { "type": "string", "format": "date-time" }
        }
      },
      "AdminAction": { "type": "object", "properties": { "action": { "type": "string", "enum": ["approve","reject"] }, "comment": { "type": "string" } }, "required": ["action"] },
      "SuperAction": { "type": "object", "properties": { "action": { "type": "string", "enum": ["confirm","reject"] }, "comment": { "type": "string" } }, "required": ["action"] },
      "Error": { "type": "object", "properties": { "error": { "type": "string" } } }
    }
  }
}
